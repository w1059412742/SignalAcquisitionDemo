        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Rectangle
                Width="140"
                Height="60"
                Margin="30,0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="pack://application:,,,/SignalAcquisitionDemo;component/Resources/Pictures/background.png" />
                </Rectangle.Fill>
            </Rectangle>
            <Label
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Content="COM口:"
                FontSize="18"
                FontWeight="Bold"
                Foreground="Black" />
            <ComboBox
                x:Name="Cmb_Com"
                Width="100"
                Height="35"
                Padding="5,0"
                HorizontalAlignment="center"
                VerticalAlignment="center"
                HorizontalContentAlignment="center"
                VerticalContentAlignment="center"
                BorderBrush="Black"
                BorderThickness="2"
                FontSize="16"
                Foreground="Black"
                SelectionChanged="Cmb_Com_SelectionChanged" />
            <!--  Style="{StaticResource MaterialDesignOutlinedComboBox}"  -->


            <styles:StatusLight
                x:Name="SL_Status"
                Width="35"
                Height="35"
                Margin="20,0"
                HorizontalAlignment="Right"
                FalseBrush="Red"
                ToolTip="连接状态"
                TrueBrush="#FF1BD600"
                Value="False" />
        </StackPanel>


        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="6*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <GroupBox
                x:Name="Grb_AnalogRead"
                Grid.RowSpan="3"
                Margin="5,5,10,5"
                BorderBrush="#00FF00"
                BorderThickness="2"
                IsEnabled="false">
                <GroupBox.Header>
                    <TextBlock
                        Padding="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Foreground="#04B404"
                        Text="4-20mA模拟量采集通道" />
                </GroupBox.Header>
                <ScrollViewer
                    Margin="0"
                    Padding="8"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="Grid_PCI1622C" Margin="0" />
                </ScrollViewer>
            </GroupBox>
