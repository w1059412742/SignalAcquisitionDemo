                Margin="10,5,5,10"
                Header="开关量采集通道">
                <ScrollViewer
                    Margin="0"
                    Padding="0"
                    HorizontalScrollBarVisibility="Auto"
                    VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="Grid_SwitchRead" Margin="0" />
                </ScrollViewer>
            </GroupBox>

            <GroupBox
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,5,5,5">
                <GroupBox.Header>
                    <Grid Height="20">
                        <TextBlock
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Foreground="Black"
                            Text="开关量输出通道" />
