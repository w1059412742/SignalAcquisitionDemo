                Margin="10,5,5,10"
                BorderBrush="#00FF00"
                BorderThickness="2">
                <GroupBox.Header>
                    <TextBlock
                        Padding="0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="22"
                        Foreground="#04B404"
                        Text="开关量采集通道" />
                </GroupBox.Header>
                <ScrollViewer
                    Margin="0"
                    Padding="8"
