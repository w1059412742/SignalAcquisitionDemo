        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Content="COM口:"
                FontSize="18"
                FontWeight="Bold"
                Foreground="Black" />
            <ComboBox
                x:Name="Cmb_Com"
                Width="100"
                Height="30"
                Padding="5,0"
                BorderBrush="Black"
                BorderThickness="2"
                FontSize="16"
                Foreground="Wheat"
                SelectionChanged="Cmb_Com_SelectionChanged"
                Style="{StaticResource MaterialDesignOutlinedComboBox}" />


            <styles:StatusLight
                x:Name="SL_Status"
                Width="35"
                Height="35"
                Margin="20,0"
                HorizontalAlignment="Right"
                ToolTip="连接状态"
                Value="False" />
        </StackPanel>


