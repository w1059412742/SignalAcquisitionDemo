        <StackPanel Background="#989898" Orientation="Horizontal">
            <styles:RecSwitch
                x:Name="TB_Start"
                Width="120"
                Height="Auto"
                Margin="10,0"
                CheckedText="开始"
                FontSize="13"
                IsChecked="False"
                Text="结束"
                ToolTip="运行状态" />

