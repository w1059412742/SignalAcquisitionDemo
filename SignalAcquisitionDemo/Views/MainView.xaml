            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <GroupBox
                Grid.RowSpan="3"
                Margin="5,5,10,5"
                Header="4-20mA模拟量采集通道">
                <ScrollViewer
