                Grid.Column="1"
                Margin="10,5,5,5"
                BorderBrush="#00FF00"
                BorderThickness="2">
                <GroupBox.Header>
                    <Grid Height="20">
                        <TextBlock
                            Padding="0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="22"
                            Foreground="#04B404"
                            Text="开关量输出通道" />
                    </Grid>
                </GroupBox.Header>
                <ScrollViewer
