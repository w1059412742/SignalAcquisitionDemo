    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="100*" />
        </Grid.RowDefinitions>
        <StackPanel Background="#989898" Orientation="Horizontal">
            <styles:RecSwitch
                x:Name="TB_Start"
                Width="120"
                Height="Auto"
                Margin="10,0"
                CheckedText="打开"
                Click="TB_Start_Click"
                FontSize="13"
                IsChecked="False"
                Text="关闭"
                ToolTip="运行状态" />

